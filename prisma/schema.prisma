generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Question {
  id           Int      @id @default(autoincrement())
  subject      String
  grade        Int
  content      String   // The actual question
  choiceA      String
  choiceB      String
  choiceC      String
  choiceD      String
  correctAnswer String  // One of: "A", "B", "C", "D"
  createdAt    DateTime @default(now())
}